{
  "name": "contracts-brc20-indexer",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/contracts/brc20-indexer/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/contracts/brc20-indexer",
        "main": "packages/contracts/brc20-indexer/src/index.ts",
        "tsConfig": "packages/contracts/brc20-indexer/tsconfig.lib.json",
        "assets": ["packages/contracts/brc20-indexer/*.md"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/contracts/brc20-indexer/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/contracts/brc20-indexer/**/*.ts",
          "packages/contracts/brc20-indexer/package.json"
        ]
      }
    },
    "contract-deploy": {
      "executor": "nx-stacks:deploy",
      "options": {
        "clarinetPath": "packages/contracts/brc20-indexer/brc20-indexer-v1",
        "contracts": [
          "clarity-bitcoin",
          "utils",
          "indexer-registry"
        ],
        "deployerSecretKey": "${STACKS_DEPLOYER_ACCOUNT_SECRET}",
        "puppetURL": "${STACKS_PUPPET_URL}",
        "stacksAPIURL": "${STACKS_API_URL}"
      }
    },
    "contract-setup": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node --project tsconfig.lib.json src/setup/setupIndexer.ts",
        "cwd": "packages/contracts/brc20-indexer"
      },
      "dependsOn": [
        {
          "target": "build"
        },
        {
          "target": "contract-deploy"
        }
      ]
    },
    "setup": {
      "executor": "nx:noop",
      "dependsOn": [
        {
          "target": "contract-deploy"
        },
        {
          "target": "contract-setup"
        }
      ]
    },
    "contract-generate": {
      "executor": "nx-stacks:contract-generate",
      "options": {
        "stacksAPIURL": "${STACKS_API_URL}",
        "outputPath": "packages/contracts/brc20-indexer/src/generated",
        "targets": [
          {
            "name": "indexer",
            "principal": "${STACKS_DEPLOYER_ACCOUNT_ADDRESS}",
            "contracts": [
              "clarity-bitcoin",
              "indexer-dev-preview-3",
              "indexer-registry-dev-preview-1"
            ],
            "packageName": "../codegenImport"
          }
        ]
      }
    },
    "contract-list-generate": {
      "executor": "nx-stacks:contract-list-generate",
      "options": {
        "outputPath": "packages/contracts/brc20-indexer/src/generated",
        "clarinetDirectoryGenerateTargets": [
          {
            "clarinetConfigPath": "packages/contracts/brc20-indexer/brc20-indexer-v1/Clarinet.toml",
            "outputPath": "packages/contracts/brc20-indexer/src/generated/brc20-indexer-v1.json"
          }
        ]
      }
    }
  },
  "tags": []
}
